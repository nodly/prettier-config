{
  "name": "@nodly/prettier-config",
  "version": "1.0.1",
  "description": "Shareable configuration for prettier",
  "author": "Nodly",
  "license": "MIT",
  "repository": "nodly/prettier-config",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    ".prettierrc.json",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "main": ".prettierrc.json",
  "scripts": {
    "format": "prettier --write \"{**/*,*}.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"{**/*,*}.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "8.0.3",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "pinst": "2.1.6",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1"
  },
  "peerDependencies": {
    "prettier": ">=2.4.0"
  }
}
