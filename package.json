{
  "name": "@nodly/prettier-config",
  "version": "1.0.2",
  "description": "A shareable configuration for prettier",
  "author": "Nodly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodly/prettier-config.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    ".prettierrc.json",
    "CHANGELOG.md"
  ],
  "main": ".prettierrc.json",
  "scripts": {
    "format": "prettier --write \"{**/*,*}.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"{**/*,*}.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "9.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.2",
    "pinst": "2.1.6",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1"
  },
  "peerDependencies": {
    "prettier": ">=2.4.0"
  }
}
