{
  "name": "@nodly/prettier-config",
  "version": "1.0.0",
  "description": "Shareable configuration for prettier",
  "author": "Nodly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:nodly/prettier-config.git"
  },
  "files": [
    ".prettierrc.json",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "main": ".prettierrc.json",
  "scripts": {
    "format": "prettier --write \"{**/*,*}.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"{**/*,*}.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "packageManager": "yarn@3.1.0",
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "pinst": "2.1.6",
    "prettier": "2.4.1"
  },
  "peerDependencies": {
    "prettier": ">=2.4.0"
  }
}
