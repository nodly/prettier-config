{
  "name": "@nodly/prettier-config",
  "type": "module",
  "version": "5.2.2",
  "description": "A shareable configuration for prettier.",
  "author": "Nodly AB",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodly/prettier-config.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "main": "./dist/prettier.config.cjs",
  "module": "./dist/prettier.config.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/prettier.config.js",
      "require": "./dist/prettier.config.cjs"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/node": "22.10.1",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "pinst": "3.0.0",
    "prettier": "3.4.2",
    "semantic-release": "24.2.0",
    "typescript": "5.7.2",
    "vite": "5.4.11",
    "vite-plugin-dts": "4.3.0"
  },
  "peerDependencies": {
    "prettier": ">=3.0.0"
  },
  "packageManager": "yarn@4.5.3"
}
